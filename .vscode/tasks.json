// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": [
				"$ts-webpack-watch",
				"$tslint-webpack-watch"
			],
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		// Task to Run VSCE Package and install the generated .vsix
		{
			"label": "Package Local Extension",
			"type": "shell",
			"command": "yes | vsce package -o vssticky.vsix"
		},
		{
			"label": "Install Local Extension",
			"type": "shell",
			"command": "code-insiders --install-extension vssticky.vsix",
			"dependsOn": "Package Local Extension"
		}
	]
}