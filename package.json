{
  "name": "vssticky",
  "displayName": "VSSticky",
  "description": "Attach Sticky Notes on your files, from inside VS Code.",
  "author": "Hyperclaw79",
  "publisher": "Hyperclaw79",
  "version": "1.0.4",
  "icon": "assets/vssticky.png",
  "galleryBanner": {
    "color": "#770000",
    "theme": "dark"
  },
  "license": "MIT",
  "homepage": "https://github.com/Hyperclaw79/vssticky#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hyperclaw79/vssticky.git"
  },
  "bugs": {
    "url": "https://github.com/Hyperclaw79/vssticky/issues",
    "email": "harshith.thota7@gmail.com"
  },
  "keywords": [
    "vscode",
    "vscode-extension",
    "extensions",
    "sticky-notes"
  ],
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.67.0",
    "node": ">=16.13.0",
    "npm": ">=8.10.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "VSSticky",
        "properties": {
          "vssticky.autosaveInterval": {
            "type": "number",
            "default": 500,
            "markdownDescription": "The **interval** (in milliseconds) to save the sticky notes automatically.",
            "minimum": 500
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vssticky.addStickyNote",
        "category": "VSSticky",
        "title": "Add Sticky Note"
      },
      {
        "command": "vssticky.addEphemeralNote",
        "category": "VSSticky",
        "title": "Add Ephemeral Note"
      },
      {
        "command": "vssticky.deleteStickyNote",
        "category": "VSSticky",
        "title": "Delete Sticky Note"
      },
      {
        "command": "vssticky.deleteAllNotes",
        "category": "VSSticky",
        "title": "Delete All Notes"
      },
      {
        "command": "vssticky.exportStickyNotes",
        "category": "VSSticky",
        "title": "Export Sticky Notes"
      },
      {
        "command": "vssticky.importStickyNotes",
        "category": "VSSticky",
        "title": "Import Sticky Notes"
      },
      {
        "command": "vssticky.createTodo",
        "category": "VSSticky",
        "title": "Create a Todo.md"
      },
      {
        "command": "vssticky.copySelectionToNote",
        "category": "VSSticky",
        "title": "Copy Selection to Existing Note"
      }
    ],
    "views": {
      "notesPanel": [
        {
          "id": "niview",
          "name": "Notes",
          "type": "webview"
        }
      ],
      "explorer": [
        {
          "id": "anview",
          "name": "All VSSticky Notes",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "notesPanel",
          "title": "Notes",
          "icon": "assets/ni-icon.png"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "vssticky.copySelectionToNote",
          "group": "9_cutcopypaste",
          "when": "editorHasSelection"
        }
      ],
      "editor/context/copy": [
        {
          "command": "vssticky.copySelectionToNote",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "vsce": "^2.8.0",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "markdown-it-checkbox": "^1.1.0",
    "markdown-it-emoji": "^2.0.2"
  }
}
