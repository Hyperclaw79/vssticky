{
  "name": "vssticky",
  "displayName": "VSSticky",
  "description": "Attach sticky notes on your files, from inside VS Code.",
  "version": "0.5.0",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration":[
      {
        "title": "VSSticky",
        "properties": {
          "vssticky.autosaveInterval": {
            "type": "number",
            "default": 500,
            "markdownDescription": "The **interval** (in milliseconds) to save the sticky notes automatically.",
            "minimum": 500
          }
        }
      }
    ],
    "commands": [
      {
        "command": "vssticky.addStickyNote",
        "category": "VSSticky",
        "title": "Add Sticky Note"
      },
      {
        "command": "vssticky.addEphemeralNote",
        "category": "VSSticky",
        "title": "Add Ephemeral Note"
      },
      {
        "command": "vssticky.deleteStickyNote",
        "category": "VSSticky",
        "title": "Delete Sticky Note"
      },
      {
        "command": "vssticky.deleteAllNotes",
        "category": "VSSticky",
        "title": "Delete All Notes"
      }
    ],
    "views": {
      "notesPanel": [
        {
          "id": "niview",
          "name": "Notes",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "notesPanel",
          "title": "Notes",
          "icon": "media/ni-icon.png"
        }
      ]
    },
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "markdown-it-checkbox": "^1.1.0"
  }
}
